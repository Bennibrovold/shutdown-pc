{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
      "lib": ["ESNext"],
      "module": "commonjs",
      "target": "ESNext",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    }
  }